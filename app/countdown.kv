MainWidget:

<MainWidget>:
    orientation: "vertical"
    cols: 1
    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.display
            font_name: "assets/lcd.ttf"
            font_size: 300
            color: 0, 1, 0, 1
            valign: "middle"
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.4
            BoxLayout:
                Button:
                    text: "2 min"
                    font_size: 32
                    on_press: root.start(120)
                Button:
                    text: "5 min"
                    font_size: 32
                    on_press: root.start(300)
                Button:
                    text: "8 min"
                    font_size: 32
                    on_press: root.start(8*60)
                Button:
                    text: "10 min"
                    font_size: 32
                    on_press: root.start(600)
                Button:
                    text: "12 min"
                    font_size: 32
                    on_press: root.start(12*60)
            BoxLayout:
                Button:
                    text: "-5 min"
                    font_size: 32
                    on_press: root.add(-300)
                Button:
                    text: "-1 min"
                    font_size: 32
                    on_press: root.add(-60)
                Button:
                    text: "-10 sec"
                    font_size: 32
                    on_press: root.add(-10)
                Button:
                    text: "+10 sec"
                    font_size: 32
                    on_press: root.add(10)
                Button:
                    text: "+1 min"
                    font_size: 32
                    on_press: root.add(60)
                Button:
                    text: "+5 min"
                    font_size: 32
                    on_press: root.add(300)
            BoxLayout:
                Button:
                    text: "Stop"
                    font_size: 32
                    on_press: root.stop()
